<p id="notice"><%= notice %></p>

<h1>Peeks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Datafile</th>
      <th>Peek type</th>
      <th>Peek text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peeks.each do |peek| %>
      <tr>
        <td><%= peek.task_id %></td>
        <td><%= peek.datafile_id %></td>
        <td><%= peek.peek_type %></td>
        <td><%= peek.peek_text %></td>
        <td><%= link_to 'Show', peek %></td>
        <td><%= link_to 'Edit', edit_peek_path(peek) %></td>
        <td><%= link_to 'Destroy', peek, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

